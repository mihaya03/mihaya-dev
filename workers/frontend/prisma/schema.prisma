generator client {
  provider     = "prisma-client-js"
  engineType   = "library"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model post {
  id        String   @id @default(cuid())
  title     String
  tags      tag[]    @relation("PostTags")
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model tag {
  id    String   @id @default(cuid())
  name  String   @unique
  posts post[]   @relation("PostTags")
}
