{
  "name": "mihaya-dev",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:text": "textlint \"**/*.md\"",
    "lint:text:fix": "textlint --fix \"**/*.md\"",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.3",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.3.0",
  "workspaces": [
    "workers/*",
    "packages/*"
  ],
  "dependencies": {
    "ulid": "^3.0.0"
  },
  "lint-staged": {
    "*.md": [
      "textlint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ]
  }
}
