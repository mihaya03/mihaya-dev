{
  "filters": {},
  "rules": {
    "preset-ja-technical-writing": {
      "ja-no-mixed-period": {
        "allowPeriodMarks": [":", "：", ")", "）"]
      },
      "ja-no-weak-phrase": false,
      "ja-no-successive-word": false,
      "no-exclamation-question-mark": false,
      "no-doubled-joshi": {
        "strict": false,
        "allow": ["か", "まで"]
      }
    },
    "preset-japanese": {
      "sentence-length": {
        "max": 120
      },
      "max-ten": {
        "max": 3
      }
    },
    "spellcheck-tech-word": true,
    "prh": {
      "rulePaths": ["./.textlint-prh.yml"]
    }
  }
}